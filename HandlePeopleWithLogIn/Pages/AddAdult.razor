@page "/AddAdult"
@using Models
@using HandlePeopleWithLogIn.Data

@inject NavigationManager NavigationManager
@inject IDataService DataService

<h3>Add a new adult:</h3>
<AuthorizeView>
    <NotAuthorized>Please log in to add new data!</NotAuthorized>
    <Authorized Context="Auth">
        <EditForm Model="@newAdultItem" OnValidSubmit="@AddNewAdult">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <div class="form-group"> ID:<br/>
                <InputNumber @bind-Value="newAdultItem.Id"/>
            </div>
            <div class="form-group"> Firstname:<br/>
                <InputText rows="4" @bind-Value="newAdultItem.FirstName"/>
            </div>
            <div class="form-group"> Lastname:<br/>
                <InputText rows="4" @bind-Value="newAdultItem.LastName"/>
            </div>
            <div class="form-group"> Job:<br/>
                <InputText rows="4" @bind-Value="newAdultItem.JobTitle.JobTitle"/>
            </div>
            <div class="form-group"> Eye colour:<br/>
                <InputText rows="4" @bind-Value="newAdultItem.EyeColor"/>
            </div>
            <div class="form-group"> Hair colour:<br/>
                <InputText rows="4" @bind-Value="newAdultItem.HairColor"/>
            </div>
            <div class="form-group"> Age:<br/>
                <InputNumber rows="4" @bind-Value="newAdultItem.Age"/>
            </div>
            <div class="form-group"> Weight:<br/>
                <InputNumber rows="4" @bind-Value="newAdultItem.Weight"/>
            </div>
            <div class="form-group"> Height:<br/>
                <InputNumber rows="4" @bind-Value="newAdultItem.Height"/>
            </div>
            <div class="form-group"> Sex:<br/>
                <InputText rows="4" @bind-Value="newAdultItem.Sex"/>
            </div>
            <p class="actions">
                <button class="btn btn-outline-dark"type="submit">Create</button>
            </p>
        </EditForm>
    </Authorized>
</AuthorizeView>
@code {
    private Adult newAdultItem;

    private async Task SetupNewAdult()
    {
        newAdultItem = new Adult();
        newAdultItem.Id = 0;
        newAdultItem.FirstName = "";
        newAdultItem.LastName = "";
        newAdultItem.JobTitle = new Job();
        newAdultItem.JobTitle.Salary = 0;
        newAdultItem.JobTitle.JobTitle = "";
        newAdultItem.Age = 0;
        newAdultItem.Weight = 0;
        newAdultItem.HairColor = "";
        newAdultItem.EyeColor = "";
        newAdultItem.Height = 0;
        newAdultItem.Sex = "";
    }

    protected override Task OnInitializedAsync()
    {
        SetupNewAdult();
        return base.OnInitializedAsync();
    }

    private void AddNewAdult()
    {
        DataService.AddAdult(newAdultItem);
        NavigationManager.NavigateTo("/Adults");
    }
}